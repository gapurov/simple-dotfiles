# Minimal, portable Zsh configuration
export EDITOR=vim
export PAGER=less

# Prepend user bin if present
if [ -d "$HOME/bin" ]; then
    PATH="$HOME/bin:$PATH"
fi
export PATH

# History settings
HISTFILE="$HOME/.zsh_history"
HISTSIZE=5000
SAVEHIST=5000
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_IGNORE_SPACE

# Completion and prompt
autoload -Uz compinit && compinit -C
PROMPT='%n@%m:%~ %# '

# Aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
